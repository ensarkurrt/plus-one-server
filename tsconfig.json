{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "moduleResolution": "node",                
    "module": "commonjs",           
    "outDir": "dist",       
    "strict": true,                           
    "esModuleInterop": true,   
    "resolveJsonModule": true,
    "isolatedModules": true,              
    "skipLibCheck": true,          
    /* "noUnusedLocals": true, */           
    "forceConsistentCasingInFileNames": false,
  }
}